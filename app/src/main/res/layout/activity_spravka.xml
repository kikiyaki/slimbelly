<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context="com.hfad.slimbelly.main.SpravkaActivity"
    android:background="@color/gray">



    <android.support.v7.widget.CardView

        android:id="@+id/cardMeal"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        card_view:cardCornerRadius="10dp"

        android:stateListAnimator="@drawable/lift_on_touch"
        android:clickable="true"
        android:focusable="true"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        android:layout_margin="2dp"
        >


        <ImageView
            android:id="@+id/imageMeal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            android:foreground="?android:attr/selectableItemBackground"/>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:padding="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Питание"
                android:textColor="@color/blue"
                android:textSize="30dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView

        android:id="@+id/cardTraining"
        android:layout_below="@id/cardMeal"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        card_view:cardCornerRadius="10dp"

        android:stateListAnimator="@drawable/lift_on_touch"
        android:clickable="true"
        android:focusable="true"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        android:layout_margin="2dp"
        >


        <ImageView
            android:id="@+id/imageTraining"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            android:foreground="?android:attr/selectableItemBackground"/>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:padding="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Упражнения"
                android:textColor="@color/blue"
                android:textSize="30dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView

        android:id="@+id/cardVacuum"
        android:layout_below="@id/cardTraining"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        card_view:cardCornerRadius="10dp"

        android:stateListAnimator="@drawable/lift_on_touch"
        android:clickable="true"
        android:focusable="true"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        android:layout_margin="2dp"
        >


        <ImageView
            android:id="@+id/imageVacuum"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            android:foreground="?android:attr/selectableItemBackground"/>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:padding="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Вакуум"
                android:textColor="@color/blue"
                android:textSize="30dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView

        android:id="@+id/cardTheory"
        android:layout_below="@id/cardVacuum"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        card_view:cardCornerRadius="10dp"

        android:stateListAnimator="@drawable/lift_on_touch"
        android:clickable="true"
        android:focusable="true"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        android:layout_margin="2dp"
        >


        <ImageView
            android:id="@+id/imageTheory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            android:foreground="?android:attr/selectableItemBackground"/>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:padding="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Теория"
                android:textColor="@color/blue"
                android:textSize="30dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>



</RelativeLayout>