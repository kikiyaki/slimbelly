<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrainingActivity"
    android:background="@drawable/zaryadka">

    <TextView
        android:id="@+id/exer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/blue"
        android:text="Круг 1"
        android:textSize="25dp"/>

    <TextView
        android:id="@+id/exer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/exer1"
        android:textColor="@color/blue"
        android:text="Упражнение 1"
        android:textSize="25dp"/>

    <TextView
        android:id="@+id/textExercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/exer2"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="20dp"/>

    <ImageView
        android:id="@+id/imageExercise"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textExercise"
        android:layout_above="@id/ex_text"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/ex_text"
        android:layout_above="@id/timer"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:padding="5dp"
        android:text="1) Поднимите правое колено как можно выше"/>



    <TextView
        android:id="@+id/timer"
        android:layout_above="@id/timerButton"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textColor="@color/blue"
        android:textSize="25dp"/>

    <Button
        android:id="@+id/timerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="onTimerButton"
        android:padding="5dp"
        android:text="Начать тренировку" />



</RelativeLayout>
